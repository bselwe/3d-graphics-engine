{
    "compilerOptions": {
      "rootDir": "ts",
      "outDir": "dist",
      "jsx": "react",
      "target": "es6",
      "module": "es2015",
      "moduleResolution": "node",
      "sourceMap": true,
      "removeComments": true,
      "noImplicitAny": true,
      "alwaysStrict": true,
      "strictNullChecks": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "exclude": [
      "node_modules"
    ]
  }
  